<h1>Admin panel</h1>

<p>
  <%= link_to "New receptionist", new_admin_receptionist_path, class: "btn btn-primary" %>
</p>

<table class="table table-hover table-bordered">
  <thead>
    <caption>Receptionists</caption>
    <th>
      Id
    </th>
    <th>
      Email
    </th>
    <th>
      Actions
    </th>
  </thead>
  <tbody>
  <% @receptionists.each do |receptionist| %>
      <tr>
        <th scope="row"><%= receptionist.id %></th>
        <td><%= receptionist.email %></th>
        <td>
          <%= link_to "Edit", edit_admin_receptionist_path(id: receptionist.id), class: "btn btn-primary" %>
          <%= link_to "Delete", admin_receptionist_path(id: receptionist.id), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %>
        </td>
      </tr>
      </li>
  <% end -%>
  </tbody>
</table>

