<h2>Edit</h2>

<%= form_for(@user, url: admin_user_path(@user), html: { method: :put }) do |f| %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>
  
  <div class="field">
    <%= f.label "Phone number" %><br />
    <%= telephone_field(:user, :telephone) %>
  </div>

  <div class="field">
    <%= f.label :subscription %><br />
    <%= f.date_field :subscription, placeholder: "YYYY-MM-DD" %>
  </div>

  <div class="field">
    <%= f.label "Password (optional)" %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
