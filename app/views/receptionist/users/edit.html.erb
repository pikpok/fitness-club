<h2>Edit <%= @user.first_name + ' ' + @user.last_name %></h2>

<%= simple_form_for(@user, url: receptionist_user_path(@user), html: { method: :put }) do |f| %>
  
  <div class="form-inputs">
    <%= f.input :first_name, required: true, autofocus: true %>
    <%= f.input :last_name, required: true %>
    <%= f.input :email, required: true %>
    <%= f.input :telephone, required: true %>
    <%= f.input :subscription, as: :date_picker, required: true %>
    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, required: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Edit user" %>
  </div>
<% end %>
</br>
<%= link_to "Back", receptionist_users_path, class: "btn btn-default" %>
